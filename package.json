{
  "name": "react-endpoint-renderer",
  "version": "0.1.0",
  "description": "Render your endpoints on the fly with React ðŸ§ª",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsup src/index.tsx src/styles.ts",
    "lint": "npx eslint . --ext .ts,.tsx --fix",
    "lint:ci": "npx eslint --ext .ts,.tsx",
    "test": "npx jest",
    "storybook": "npx start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/react-endpoint-renderer.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yowainwright/react-endpoint-renderer/issues"
  },
  "homepage": "https://github.com/yowainwright/react-endpoint-renderer#readme",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/cli": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^18.0.3",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel-loader": "^8.2.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^27.3.1",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^13.0.3",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "styled-components": "^5.3.3",
    "ts-jest": "^27.0.7",
    "ts-lib": "^0.0.5",
    "ts-loader": "9.3.1",
    "tsup": "^5.12.4",
    "typescript": "^4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then pnpm i -r; fi",
      "post-merge": "pnpm i -r",
      "post-rewrite": "pnpm i -r",
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "pnpm run lint"
    ]
  }
}
